<article class="row">
  <div class="dashboard-post">
    <p class="card-title post-title">
      <a href="/post/{{id}}">{{title}}</a>
    </p>
    <div class="post-body">
      <p class="post-content">{{post_content}}</p>
    </div>
  </div>
  <div class="">
    {{likes_count}}
    Likes 
    {{dislike_count}}
    Dislike
    <p class="post-author">Posted by
      <span class="post-username">{{user.username}}</span>
      on
      {{format_date created_at}}
      |
      <a href="/post/{{id}}">
        {{comments.length}}
        Comments</a></p>

  </div>
</article>