<h2>Add comment</h2>

<section>
    {{> post-info post}}

    {{#if loggedIn}}
    <form class="comment-form">
        <div>
            <textarea class="form-control"name="comment-body"></textarea>
        </div>
        <div>
            <button type="submit" class="btn">Add comment</button>
           <button class="upvote-btn ">
            <script src="https://cdn.lordicon.com/qjzruarw.js"></script>
<lord-icon
    src="https://cdn.lordicon.com/iwaotjbp.json"
    trigger="hover"
    style="width:30px;height:30px">
</lord-icon>
           </button>
            <button type="button" class="downvote-btn">
                <script src="https://cdn.lordicon.com/qjzruarw.js"></script>
<lord-icon
    src="https://cdn.lordicon.com/wwneckwc.json"
    trigger="hover"
    style="width:32px;height:32px">
</lord-icon>
            </button>
        </div>
    </form>
    {{/if}}
</section>

{{> comments post.comments}}

{{#if loggedIn}}
<script src="/js/comment.js"></script>
<script src="/js/like.js"></script>
<script src="/js/dislike.js"></script>
{{/if}}
